# margin
1.step 1
margin-top:10px or 0.1em;
margin-right:10px or  0.1em;
margin-bottom:10px or  0.1em;
margin-left:10px or  0.1em;
2.step 2
margin-top:10%;
margin-right:10%;
margin-bottom:10%;
margin-left:10%;
3. step 3
margin-top:auto;
margin-right:auto;
margin-bottom:auto;
margin-left:auto;
4. step 4
 margin:10px 10px 10px 10px; 
 margin:10% 10% 10% 10%;
 margin:auto auto auto auto;
 margin:0.1em 0.1em 0.1em 0.1em; 
 margin:0.1em 10% auto 10px;
5. step 5 
     	 margin:10px 10px ; 
	 margin:10% 10% ;
	 margin:auto auto;
	 margin:0.1em 0.1em; 
	 margin:0.1em 10%;
